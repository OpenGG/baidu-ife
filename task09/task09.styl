*
  margin: 0
  padding: 0

header
  background-color: #2289bf
  height: 57px
  position: relative
header>img
  position: absolute
  left:50px
  top:10px
header>form
  position: absolute
  right:80px
  top:15px
header>form>fieldset section
  float:left
header>form>fieldset
  border:none
  &:after
    content: ''
    clear:both
    display: block
header>form>fieldset>legend
  display: none
header .search input
  width: 313px
  height: 28px
  line-height: 28px
  border:none
  border-radius: 25px
  display: inline-block
  outline: none
  background-image: url(images/search_icon.png)
  background-repeat: no-repeat
  background-position: 15px 5px
  text-indent: 35px
header .login input
  color: #FFFFFF
  font: 600 12px/2.25 'Adobe Heiti Std'
  background-color:  #2289bf
  border:none
  padding:0 35px
  background-image: url(images/login.png)
  background-repeat: no-repeat
  background-position: 15px 5px

aside
  background-color:#2a2e3d
  width: 261px;
  height: 1213px;
aside>figure
  display: flex
  flex-direction: row
  justify-content: center;
  align-items: center;
  padding:15px;
aside>figure>img
  background-image: url(images/headpic.png)
  background-repeat: no-repeat
  background-position: center
aside>figure>figcaption
  color: #F6F5F5;
  font: 600 16px 'SimHei';
  padding:0 23px;
aside>ul
  display: flex;
  justify-content: center;
  align-content: center;
aside>ul>li
  list-style-type: none;
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #6E8095;
  font: 600 12px 'SimHei';
  padding:0 35px;
aside>ul>li span:first-child
   font-size:14px
aside>ul>li:first-child
  border-right: 1px solid #6E8095;

aside>nav
  border:1px solid red
  padding:10px 40px;
aside>nav li
    list-style-type: none;
aside>nav>li.first
  list-style-type: none;

aside>nav>ul span
  color: #6E8095;
  font: 600 12px/4 'SimHei';

aside>nav>ul li.report .icon
  background-image: url(images/report.png)
  width: 5px;
  height: 5px;
  border:1px solid #fff;





















































